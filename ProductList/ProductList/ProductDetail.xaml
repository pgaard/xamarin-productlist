<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductList.ProductDetail">
  <StackLayout Padding="20,20,20,20" Spacing="5">
    <Image Source="{Binding ProductLargeImageSource}" 
            HorizontalOptions="Center"  
            Aspect="AspectFill"
			      RelativeLayout.WidthConstraint="{ConstraintExpression
				      Type=RelativeToParent,
				      Property=Width,
				      Factor=1}">      
    </Image>
    <Label Text="{Binding shortDescription}" HorizontalOptions="Center" />
    <Label Text="{Binding erpNumber}" HorizontalOptions="Center" />
    <Label Text="{Binding manufacturerItem}" HorizontalOptions="Center" />
    <Label Text="{Binding pricing.actualPriceDisplay}" HorizontalOptions="Center" />    
    <Button Text="Add To Cart" Clicked="Handle_AddToCart" />
  </StackLayout>
</ContentPage>